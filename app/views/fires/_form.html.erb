    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :owner %><br>
    <%= f.text_field :owner %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, options_for_select(%w[Raging Smoldering Extinguished]) %>
  </div>
  <div class="field">
    <%= f.label :root_cause_analysis %><br>
    <%= f.text_area :root_cause_analysis %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
