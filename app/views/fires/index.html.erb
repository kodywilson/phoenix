<h1>Fires</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Incident</th>
      <th>Description</th>
      <th>Owner</th>
      <th>Status</th>
      <th>Root cause analysis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fires.each do |fire| %>
      <tr>
        <td><%= fire.name %></td>
        <td><%= fire.incident %></td>
        <td><%= fire.description %></td>
        <td><%= fire.owner %></td>
        <td><%= fire.status %></td>
        <td><%= fire.root_cause_analysis %></td>
        <td><%= link_to 'Show', fire, class: "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Edit', edit_fire_path(fire), class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Delete', fire, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<a href="fires/new" class="btn btn-primary active" role="button">Report Fire</a>
