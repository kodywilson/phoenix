<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Body</th>
      <th>Fire</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_name %></td>
        <td><%= comment.body %></td>
        <td><%= comment.fire_id %></td>
        <td><%= link_to 'Show', comment, class: "btn btn-success btn-xs" %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment), class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="comments/new" class="btn btn-primary active" role="button">Add Comment</a>
